<div class="flash-msg">
  <% if (flashMessages) { %>
        <% if (flashMessages.success) { %>
            <div class="alert alert-sucess flash success">
                <%=flashMessages.success%>
            </div>
       
    <% } else if (flashMessages.error) { %>
        <div class="alert alert-danger flash success">
            <%=flashMessages.error%>
        </div>
        <% } %>
    <% } %>
</div>
